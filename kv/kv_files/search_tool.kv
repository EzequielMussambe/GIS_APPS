#:kivy 1.11.1
#:import utils kivy.utils
<FlatButton@ButtonBehavior+Label>:
    color:0,0,0,1
    font_size:16
<CustomButton@Button>:
    size:20,10
    font_size:14
    bold:True
<SearchTool>:
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#35477d")
            Rectangle:
                size:self.size
                pos:self.pos
        FloatLayout:
            size:self.size
            TextInput:
                id:login_email
                hint_text:"email"
                
                size_hint:.8,.8
                pos_hint:{"top":.9, "right":.9}

                
