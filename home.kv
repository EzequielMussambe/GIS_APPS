#:kivy 1.11.1
#:import utils kivy.utils
#:include kv/homescreen.kv
GridLayout:
    cols:1
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#35477d")
            Rectangle:
                size: self.size
                pos: self.pos
        GridLayout:
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#314A24")
                Rectangle:
                    size: self.size
                    pos: self.pos
            # Put two weather icons here
            rows: 1
            pos_hint: {"top": 1, "left": 1}
            size_hint: 1, .05
    ScreenManager:
        size_hint: 1, 0.699
        pos_hint: {"top":.9, "left": 1}
        id: screen_manager
        HomeScreen:
            name:"Screens"
            id:Screens
    
    Widget:
        size_hint: 1, .1
        pos_hint: {"top": .1, "right": 1}
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#35477d")
            Rectangle:
                size: self.size
                pos: self.pos
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#314A24")
            Rectangle:
                size: self.size
                pos: self.pos
        # Put two weather icons and avatar icon
        rows: 1
        pos_hint: {"top": .6, "left": 1}
        size_hint: 1, .15
    

